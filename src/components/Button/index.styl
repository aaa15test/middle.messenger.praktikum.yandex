@import('../../static/')

.button
  height 52px
  border-radius 5px
  background-color $green
  width 100%
  border 0

  &.outlined
    border-width 2px
    border-style solid
    background-color $white

  &.red
    border-color $red

  &.green
    border-color $green

.buttonLabel
  font-size 14px
  color $white
  font-weight bold

  &.green
    color $green

  &.red
    color $red
