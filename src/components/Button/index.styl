@import('../../static/')

.button
  height 52px
  border-radius 5px
  background-color $green
  width 100%
  border 0

  &.outlined
    border-width 2px
    border-style solid
    background-color $white

  &.red
    border-color $red

  &.green
    border-color $green

  &.withoutBorder
    border-width 0
    background-color $white

.buttonLabel
  font-size 14px
  color $white
  font-weight bold

  &.green
    color $green

  &.red
    color $red

  &.withoutBorder
    color $black
    font-weight normal
    text-align left

.barsIcon
  width 30px
  height @width
  color $green
  display flex
  align-items center
  font-size 24px

.sendIcon
  width 28px
  height @width
  transform rotate(180deg)
  background-image url('../../icons/backIcon.svg')
