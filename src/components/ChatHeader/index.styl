@import('../../static/index.styl')

.chatHeader
  display flex
  flex-direction row
  align-items center
  justify-content space-between

.userInformation
  display flex
  flex-direction row
  align-items center

.chatUserName
  font-size 14px
  font-weight 600
  margin-left 12px

.popuptext
  display none
  width 170px
  background-color $white
  color $black
  border-radius 5px
  padding 12px
  position absolute
  z-index 1
  top 100px
  right 24px
  box-shadow 0 0 6px rgba(0,0,0,0.25)

.show
  display block

