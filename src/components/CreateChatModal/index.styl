@import '../../static/index.styl'

.modalWrapper
  display none
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.24)
  position absolute
  left 0
  top 0
  align-items center
  justify-content center

.modal
  width 456px
  padding 48px 24px
  background-color $white
  border-radius 5px

.modalTitle
  font-size 16px
  font-weight bold
  text-align center

.selectFileButton
  margin-top 32px

.nameInput
  margin-bottom 40px
  display flex
  flex-direction column

.closeButton
  display flex
  justify-content flex-end
  position relative
  top -20px
