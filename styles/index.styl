@require('../src/static/')

// main
.main
  margin 36px auto

// input
.inputWrapper
  margin 16px 0
  display flex
  flex-direction column
  flex 1

.inputLabel
  font-size 16px
  color $black

.input
  border-width 1px
  border-style solid
  border-color $lightGray
  border-radius 5px
  height 40px
  margin-top 8px
  color $black
  padding-left 12px
  padding-right 12px

// inputProfile
.inputProfileWrapper
  display flex
  flex-direction row
  justify-content space-between
  margin 16px 0

.inputProfileLabel
  font-size 14px
  color $black

.inputProfile
  border 0
  height 20px
  width 50%
  margin-top 0
  color $black
  padding 4px 12px

// button
.button
  height 52px
  border-radius 5px
  background-color $green 
  width 100%
  border 0

  &.outlined
    border-width 2px
    border-style solid
    background-color $white

  &.red
    border-color $red

  &.green
    border-color $green 

.buttonLabel
  font-size 14px
  color $white
  font-weight bold

  &.green
    color $green 

  &.red
    color $red

// link
.link
  color $green
  text-decoration none
  font-size 16px

// backButton
.backButtonWrapper
  text-decoration none

.backButton
  display flex
  flex-direction row
  align-items center

.backLabel
  margin-left 10px
  font-size 14px
  font-weight bold
  color $green 

.backIcon
.sendIcon
  width 28px
  height @width

// modal
.modalWrapper
  display none
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.24)
  position absolute
  left 0
  top 0
  align-items center
  justify-content center

.modal
  width 456px
  padding 48px 24px
  background-color $white
  border-radius 5px

.modalTitle
  font-size 16px
  font-weight bold
  text-align center

.selectFileButton
  display flex
  justify-content center
  margin-top 32px

.linkButton
  margin-top 88px

// avatar
.avatarWrapper
  display flex
  border-radius 130
  border 0
  
.avatarUserName
  text-align center
  margin 4px 0 0
  font-size 14px
  font-weight 500

// chatItem
.chatItemWrapper
  padding 12px 0
  display flex
  flex-direction row
  justify-content space-between
  border-bottom 1px solid $lightGray

.userInfoWrapper
  display flex
  flex-direction row
  width 82%

.userInfo
  margin-left 10px
  width 80%

.userName
  font-size 14px
  font-weight 600

.lastMessage
  margin-top 8px
  font-size 12px
  color $gray

.messageInfo
  display flex
  flex-direction column
  align-items center

.messageDate
  font-size 9px
  color $gray

.unreadCircle
  margin-top 8px
  width 20px
  height @width
  background-color $green 
  border-radius @width
  display flex
  justify-content center
  align-items center

.unreadMessagesCount
  font-size 11px
  color $white

// search
.search
  flex-grow 1

.searchIcon
  width 20px
  height @width
  position absolute
  top 36
  left 28

.searchInput
  padding-left 30px
  padding-right 14px
  border-width 1px
  border-style solid
  border-color $lightGray
  border-radius 5px
  height 40px
  width 100%
  margin-top 8px

// chatHeader
.chatHeader
  display flex
  flex-direction row
  align-items center
  justify-content space-between

.userInformation
  display flex
  flex-direction row
  align-items center

.chatUserName
  font-size 14px
  font-weight 600
  margin-left 12px

.barsIcon
  width 30px
  height @width
  color $green 
  align-items center

// message
.messageWrapper
  padding 12px
  border-radius 5px
  background-color rgba(83, 170, 126, 0.1)
  max-width 520px
  width fit-content

  &.right
    margin 32px 0 0 auto

.messageText
  font-size 14px

.messageDate
  font-size 10px
  text-align right
  margin-top 10px

// sendMessage
.paperclipIcon
  color $gray
  width 28px
  height @width

.addFileBlock
  display flex
  flex-direction row
  justify-content space-between
  width 100%

.sendIcon
  transform rotate(180deg)
