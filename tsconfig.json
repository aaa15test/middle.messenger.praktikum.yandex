{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true ,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
