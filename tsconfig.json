{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": false,
    "sourceMap": true ,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"],
  "lib": ["ESNext", "DOM"],
  "ts-node": {
    "files": true
  }
}
